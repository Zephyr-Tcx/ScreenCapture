// =========================================
// ScreenCaptureTool.rc
// 使用Windows系统内置图标的版本
// =========================================

#include <windows.h>
#include "Resource.h"

// =========================================
// 1. 图标资源 - 使用系统内置图标
// =========================================

// 主程序图标 - 使用默认应用程序图标
IDI_MAIN_ICON       ICON        IDI_APPLICATION

// 系统托盘图标 - 使用信息图标（蓝色i）
IDI_TRAY_ICON       ICON        IDI_INFORMATION

// 开始按钮图标 - 使用Windows徽标（类似播放）
IDI_PLAY_ICON       ICON        IDI_WINLOGO

// 停止按钮图标 - 使用错误图标（红色×）
IDI_STOP_ICON       ICON        IDI_ERROR

// 立即截图图标 - 使用警告图标（黄色!）
IDI_CAMERA_ICON     ICON        IDI_WARNING

