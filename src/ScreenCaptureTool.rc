            VALUE "ProductName",        "屏幕截图工具\0"
            VALUE "ProductVersion",     "1.0.0.1\0"
            
            // 可选的额外信息
            VALUE "Comments",           "自动定时截图，支持多显示器\0"
            VALUE "ProductDescription", "简单易用的屏幕截图工具\0"
